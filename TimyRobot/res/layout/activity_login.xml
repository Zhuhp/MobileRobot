<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_icon_app"
        android:layout_width="wrap_content"
        android:src="@drawable/icon_app"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/iv_icon_login"
        android:layout_width="wrap_content"
        android:src="@drawable/icon_user_login"
        android:layout_below="@id/iv_icon_app"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/ll_login_username"
        android:layout_below="@id/iv_icon_login"
        style="@style/Input_Text"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/icon_user"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_login_username"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_login_pwd"
        android:layout_below="@id/ll_login_username"
        style="@style/Input_Text"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/icon_pwd"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_login_pwd"
            android:layout_width="match_parent"
            android:background="@null"
            android:layout_height="match_parent" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_login_login"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:text="@string/str_login_login" />
</RelativeLayout>