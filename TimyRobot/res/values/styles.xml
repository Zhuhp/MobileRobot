<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppTheme" parent="android:Theme.Light.NoTitleBar.Fullscreen"/>

    <style name="Middle_Button_Icon">
        <item name="android:layout_height">@dimen/normal_icon_size</item>
        <item name="android:layout_width">@dimen/normal_icon_size</item>
    </style>

    <style name="Input_Text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/large_margin_size</item>
        <item name="android:layout_marginRight">@dimen/large_margin_size</item>
        <item name="android:layout_marginTop">@dimen/normal_margin_size</item>
    </style>

</resources>
